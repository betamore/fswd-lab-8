extends ../layout.pug

block append variables
  - angularApplication = 'fswd.registration'

block body
  .row
    .col-md-12
      form(method="POST" action="/users/register")
        .form-group
          label(for="username") Username
          input.form-control(type="text" name="username" ng-model="user.username" required)
        .form-group
          label(for="email") Email Address
          input.form-control(type="email" name="email" required)
        .form-group
          label(for="password") Password
          input.form-control(type="password" name="password" required)
        .form-group
          label(for="password_confirm") Confirm password
          input.form-control(type="password" name="password_confirm" required)
        button.btn.btn-default(type="submit") Register
  .row.well(ng-if="user || registration")
      .col-md-6
        h4 User
        pre
          code {{ user | json }}
      .col-md-6
        h4 Registration
        pre
          code {{ registration | json }}
